%% Diagrama de casos de uso para sistema de atención con dispositivo EEG
useCaseDiagram
    actor Usuario as "Usuario"
    
    rectangle Sistema {
        (Entra en estado de relajación profunda) as UC1
        (Mantiene niveles adecuados de atención) as UC2
        (Usa dispositivo en entorno ruidoso) as UC3
        (Mal contacto de electrodos) as UC4
        (Ignora/desactiva alerta) as UC5
        (Presta dispositivo a otro) as UC6
        (Realiza tarea diferente) as UC7
    }
    
    Usuario --> UC1
    Usuario --> UC2
    Usuario --> UC3
    Usuario --> UC4
    Usuario --> UC5
    Usuario --> UC6
    Usuario --> UC7
    
    note right of UC1: Durante actividad que requiere atención
    note right of UC3: Entorno inadecuado para el uso
    note right of UC4: Casco mal colocado/quítado
    note right of UC7: Tarea diferente a la configurada